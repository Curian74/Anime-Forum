@{
    ViewData["ShowFooter"] = false;
    ViewData["ShowHeader"] = false;
}

<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>404 - Page Not Found</title>
     <link href="/css/404.css" rel="stylesheet" />
</head>

<div style="margin-left:350px;">
<body>
     <div class="error-container">
          <img class="error-image" src="/images/error/404.jpg" alt="404 illustration"/>
          <div class="error-code">404</div>
          <h1 class="error-message">Page Not Found</h1>
          <p class="error-description">
               Oops! The page you're looking for seems to have vanished into
               thin air. Don't worry, you can always return to our homepage.
          </p>
          <a href="/Home/Index" class="home-button">Back to Home</a>
     </div>
</body>
</div>
</html>