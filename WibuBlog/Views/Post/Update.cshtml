@model Domain.Entities.Post;

<div class="container">
    <form asp-action="UpdatePost" asp-controller="Post">
        <input type="hidden" name="id" value="@Model.Id"/>
        <label asp-for="Title"></label>
        <input asp-for="Title" /> <span class="text-danger" asp-validation-for="Title"></span>

        <label asp-for="Content"></label>
        <input asp-for="Content" /> <span class="text-danger" asp-validation-for="Content"></span>

        <br /> <br />

        <button class="btn btn-primary">Update</button>
    </form>
</div>