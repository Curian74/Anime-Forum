@using System.Security.Claims
@model Application.DTO.UserProfileDto
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/profile.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="cover-photo w-100">
            <button class="btn btn-dark position-absolute top-0 end-0 m-2">Edit</button>
            <div class="avatar-container">
                <img id="avatarImage" src="~/images/defaults/user/default_avatar.jpg" alt="Profile" class="profile-img">
                <div class="overlay">
                    <span>Change avatar</span>
                </div>
                <input type="file" id="avatarInput" accept="image/*" style="display: none;">
            </div>

        </div>
        @{
            var role = User.Identity.IsAuthenticated ? User.FindFirst(ClaimTypes.Role)?.Value ?? "Unknown Role" : "";
        }
        <div class="mt-5 ps-3">
            <h2 style="color: red">@Model.UserName</h2>
            <p class="text-muted">Role: @role</p>
        </div>
        <div class="tabs d-flex border-bottom mt-3">
            <button class="active" onclick="showTab('posts')">Posts</button>
            <button onclick="showTab('info')">Personal Infomation</button>
            <button onclick="showTab('inventory')">Inventory</button>
        </div>

        <!--posts-->
       <div id="posts" class="tab-content mt-3">
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex">
                <img src="https://via.placeholder.com/50" class="rounded-circle me-2" alt="Avatar">    
                <div>
                    <h6 class="mb-0">Nguyễn Văn A</h6>
                    <small class="text-muted">2 phút trước</small>
                </div>
            </div>
            <p class="mt-2">Đây là nội dung của bài viết đầu tiên...</p>
            <div class="text-end">
                <button class="btn btn-outline-primary btn-sm">👍 Thích</button>
                <button class="btn btn-outline-secondary btn-sm">💬 Bình luận</button>
                <button class="btn btn-outline-success btn-sm">🔗 Chia sẻ</button>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex">
                <img src="" class="rounded-circle me-2" alt="Avatar">
                <div>
                    <h6 class="mb-0">Trần Văn A</h6>
                    <small class="text-muted">10 phút trước</small>
                </div>
            </div>
            <p class="mt-2">Bài viết thứ hai có thể có thêm hình ảnh:</p>
            <img src="https://via.placeholder.com/300" class="img-fluid rounded">
            <div class="text-end mt-2">
                <button class="btn btn-outline-primary btn-sm">👍 Thích</button>
                <button class="btn btn-outline-secondary btn-sm">💬 Bình luận</button>
                <button class="btn btn-outline-success btn-sm">🔗 Chia sẻ</button>
            </div>
        </div>
    </div>
</div>
       <!--posts end-->
   <div id="info" class="tab-content mt-3 d-none small-form">
    <div class="card p-3">
        <h4 class="mb-3">Personal Information</h4>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Bio:</strong> @Model.Bio</span>
             <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
        <hr>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Name:</strong> @Model.UserName</span>
             <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
        <hr>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Email:</strong> @Model.Email</span>
             <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
        <hr>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Phone:</strong> @Model.PhoneNumber</span>
             <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
        <hr>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Password:</strong> ********</span>
            <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
        <hr>

        <div class="info-item d-flex justify-content-between align-items-center">
            <span><strong>Role:</strong> @role</span>
             <button class="btn btn-light btn-sm edit-btn">Edit</button>
        </div>
    </div>
</div>


        <div id="inventory" class="tab-content mt-3 d-none">
            <p>Frame: </p>
            <p>Title: </p>
        </div>
    </div>
    <script src="/js/profile.js"></script>
</body>
</html>