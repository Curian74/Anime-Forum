@using WibuBlog.ViewModels.Authentication
@{
    ViewData["ShowFooter"] = false;
}
@model RegisterVM

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register</title>
    <link rel="shortcut icon" href="">
    <link href="~/css/register.css" rel="stylesheet">
</head>
<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-end m-b-30">
                                        <h2 class="m-b-0">Register</h2>
                                    </div>

                                    <!-- Hiển thị lỗi từ Controller -->
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                            <div class="alert alert-danger">
                                                <ul>
                                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                                {
                                                            <li>@error.ErrorMessage</li>
                                                }
                                                </ul>
                                            </div>
                                    }

                                    <!-- Form đăng ký -->
                                    <form asp-action="RegisterAuthentication" asp-controller="Authentication" method="post" class="form-signup">
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="userName">Username:</label>
                                            <input asp-for="username" class="form-control" id="userName" placeholder="Username">
                                            <span asp-validation-for="username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="email">Email:</label>
                                            <input asp-for="email" class="form-control" id="email" placeholder="Email">
                                            <span asp-validation-for="email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password:</label>
                                            <input asp-for="password" type="password" class="form-control" id="password" placeholder="Password">
                                            <span asp-validation-for="password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between p-t-15">
                                                <button class="btn btn-primary" type="submit">
                                                    <i class="fas fa-user-plus"></i> Sign Up
                                                </button>
                                            </div>
                                        </div>
                                    </form>

                                    <a asp-action="Login" asp-controller="Authentication" id="cancel_register">
                                        <i class="fas fa-angle-left"></i> Back To Login
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
