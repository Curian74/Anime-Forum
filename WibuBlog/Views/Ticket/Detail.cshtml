@model WibuBlog.ViewModels.Ticket.TicketDetailVM

<link rel="stylesheet" href="~/richtexteditor/rte_theme_default.css" />

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Ticket Details</h3>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Update" asp-route-id="@Model.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Tag" class="form-label fw-bold">Tag</label>
                            <select asp-for="Tag" class="form-select">
                                <option value="#BannedAccount">Banned Account</option>
                                <option value="#HelpCreatePost">Help Creating Post</option>
                                <option value="#TechnicalIssue">Technical Issue</option>
                            </select>
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="form-label fw-bold">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this ticket?')">
                        <i class="bi bi-trash"></i> Delete Ticket
                    </a>
                </div>
            </form>
        </div>

        <div class="card-footer text-muted">
            <small>
                Ticket ID: @Model.Id
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_RichTextEditorInit"></partial>
    <script type="text/javascript">
        var editor = new RichTextEditor("#content", configs);
    </script>
    <script>
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}